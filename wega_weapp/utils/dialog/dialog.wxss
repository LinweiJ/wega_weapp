/* dialog.wxss */

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*content*/

.drawer_box {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 35%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: 0 75rpx;
  background: #fafafa;
  border-radius: 16rpx;
}

/* 标题 */


/* utils/delayButton/delayButton.wxss */

/* delaybutton */

.delaybutton[type="default"] {
  font-size: 28rpx;
  color: #00a7e5;
  background-color: transparent;
  padding-right: 0rpx;
  padding-left: 0rpx;
}

.delaybutton::after {
  border: 2px solid #00a7e5;
}

.delaybutton[disabled][type="default"] {
  color: #00a7e5;
  background-color: transparent;
}

.hover_delaybutton {
  opacity: 0.6;
}
